class Solution {
public:
    double myPow(double x, int n) {
     
        if(n==0)//base case
            return 1;
        if(n==1)//base case
            return x;
        if(n<0)//If power/n is negative value 
            n=abs(n),x=1/x;
         if(n%2==0)
            return myPow(x*x,n/2);
        else
            return x*myPow(x*x,n/2);
      
    }
};
